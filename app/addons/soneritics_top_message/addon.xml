<?xml version="1.0"?>
<addon scheme="3.0">
    <id>soneritics_top_message</id>
    <name>Soneritics Top Message</name>
    <version>1.0</version>
    <default_language>en</default_language>
    <priority>1000</priority>
    <status>active</status>
    <has_icon>Y</has_icon>
    <settings>
        <sections>
            <section id="general">
                <items>
                    <item id="message">
                        <name>Message (HTML)</name>
                        <type>input</type>
                        <default_value></default_value>
                    </item>
                    <item id="show_once">
                        <name>Show once</name>
                        <type>selectbox</type>
                        <default_value>N</default_value>
                        <variants>
                            <item id="N"><name>N</name></item>
                            <item id="Y"><name>Y</name></item>
                        </variants>
                    </item>
                </items>
            </section>
        </sections>
    </settings>
</addon>
